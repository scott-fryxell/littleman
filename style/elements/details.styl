details
  overflow: hidden
  position:relative
  width: 100%

  & > summary
    cursor: pointer
    font-size: 0.1em


    &::-webkit-details-marker
      display:none
    & > svg
      fill:red
      stroke:black
      stroke-width:1
      height: 2rem
      width:  base-line *2
      transform: rotate(180deg)

    & > h5
      font-size: 0
      margin:0
      transform: rotate(1deg)
      color:red
      text-shadow: 0.75px -0.5px 0px red
      text-fill-color: red-fill;
      &:hover
        font-size: inherit

  &[open]
    & > summary
      text-decoration: none
    & > *:not(summary)
      animation-name: fadeInDown

body
  & > footer >  details
    visibility: hidden
    display :none

  &[contenteditable] > footer >  details
    transition-property: all
    visibility: visible;
    animation-name: fadeInDown
    display:block

    & style
    & script
      // font: 1rem/1.66 Monaco, Mono-Space
      font-family: monospace;
      overflow: scroll;
      display: block
      background: black-fill
      color: white-white
      between: font-size
      margin: base-line (base-line * 2)
      white-space: pre
      border-color: dark
      border-radius: 0.33rem;
