details
  overflow: hidden;
  padding:gutter
  margin: gutter
  border:0.15rem solid highlight
  background: highlight
  border-radius:0.25rem
  position:relative

  & > summary
    padding: 2vh 2vw;
    text-decoration: underline
    cursor: pointer
    &::-webkit-details-marker
      display:none

  &[open]
    & > summary
      text-decoration: none
    & > *:not(summary)
      animation-name: fadeInDown

body
  & > footer >  details
    display :none

  &[contenteditable] > footer >  details
    animation-name: fadeInDown
    animation-delay: 1s
    display:block

    & style
    & script
      overflow: scroll;
      display: block
      background: dark
      color: white
      font: 1rem/1.66 Monaco, Mono-Space
      margin: 1rem
      white-space: pre
      border-color: dark
      border-radius: 0.33rem;
