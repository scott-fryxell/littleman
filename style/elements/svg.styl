svg
  padding:0
  margin:0

svg#logo
  // margin-left:$baseline
  height:$baseline * 2
  width:$baseline * 3.5
  margin-left: $baseline
  stroke:blue
  fill:green-fill
  opacity:0.4
  stroke-width:5
  @media screen and (min-width: 60rem)
    position: fixed
    top:$baseline
    left:0

svg#hero
  display: none
  z-index: -1
  width:100vw
  min-height: 100vh
  position:absolute
  top:0
  left:0
  opacity:1
  fill:green-fill
  stroke:blue-fill
  stroke-width:0.5

  & use:nth-child(2)
    stroke:red
    stroke-width:0.1
    fill:transparent
