main
  width: 100%
section#posts
  transition-property: all
  width: 100%
  header
    display: flex
    flex-direction:column
    align-items: center

  textarea
    transition-property: all
    outline: none
    overflow: auto
    box-shadow: none
    resize: none
    -webkit-appearance: none

    height: base-line * 2
    line-height: base-line * 2
    between: font-size, min-font, max-font, min-screen, max-screen
    padding:0

    background-color: transparent
    color:black
    border:0.1em solid red

    &:focus
      width: 100%
      line-height: base-line
      border-color: transparent
      user-select: text
      padding:0
      height: 100vh
      &::placeholder
        text-align: left

    &::placeholder
      padding:0
      vertical-align: middle
      between: font-size, min-font, max-font, min-screen, max-screen
      text-align: center
      color: blue
