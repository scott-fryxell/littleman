@require "../variables"

body
  min-height:100vh
  border:none
  display:flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  border: 0rem solid editor-on-color
  padding: base-line
  line-height: remove-unit(base-line)
  user-select: none

  & > header
  & > main
  & > footer
    display:flex
    flex-direction: column
    align-items: center
    justify-content: space-around

  & > main
    align-items: stretch

  & > footer
    flex-direction: column
    width: 100%
    position: fixed
    bottom:0
    left:0

  & > header
    flex-direction: row
    justify-content: space-between
    align-items: center;
    width: 100vw

    & img
      height:base-line * 6
      width:base-line * 12
      margin-left: base-line
      stroke:pink
      fill:blue
      opacity:0.4
      stroke-width:5

  & > main > aside > h1
    animation: hue 1s infinite linear
