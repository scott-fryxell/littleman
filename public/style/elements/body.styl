@require "../variables"

// *
//   outline:1px solid blue
body
  min-height:100vh
  border:none
  display:flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  border: 0rem solid editor-on-color
  padding: base-line
  line-height: remove-unit(base-line)
  user-select: none

  & > header
  & > main
  & > footer
    display:flex
    flex-direction: column
    align-items: center
    justify-content: space-around

  & > main
    align-items: stretch

  & > footer
    flex-direction: column
    width: 100%
    position: fixed
    bottom:0
    left:0

  & > header
    // width:100vw
    // justify-content: flex-start
    & img
      height:(base-line * 2.75)
