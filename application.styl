@require "style"

*
  transition: all 0.25s ease-in
  animation-duration: 0.25s
  animation-fill-mode: both
  padding:1vh 1vw

html
  outline: unset;
  padding:0
  font-size: 1rem
  font-family: sans-serif
  background: url(background.svg)
  background-size: cover
  background-repeat: no-repeat
  color:dark-text

body
  padding:0
  margin:0

h1,h2,h3,h4,h5,h6,summary
  font-size:1.5rem

main style
main script
  overflow: scroll;
  display: block
  background: dark
  color: white
  font: 1rem/1.66 Monaco, Mono-Space
  margin: 1rem
  white-space: pre
  border-color: dark
  border-radius: 0.33rem;
