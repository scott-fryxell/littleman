@require "style"

*
  transition: border 0.25s ease-out
  animation-duration: 0.25s
  animation-fill-mode: both
  box-sizing: border-box
  vertical-align: baseline;

html
  padding:0
  margin: 0
  -webkit-font-smoothing: antialiased
  fluid-size: font-size
  line-height: 1.44
  font-family: 'Lato', sans-serif
  background-color: ghost
  background-size: cover
  background-repeat: no-repeat
  color:black
  user-select: none

a
  color: blue
  font-size: 1em
  text-decoration: none
  text-shadow: 0.2px 0px darken(blue, 50%)

p > a
  border-bottom: 1.5px solid green-fill

nav > a
  color: red
  fluid-size: font-size
  text-shadow: none

h1,h2,h3,h4,h5,h6,summary
  fluid-bigger: font-size
  // font-weight: normal
  margin:0
  padding:0
  line-height: 1

p
  padding:0
  fluid-size: margin-bottom
